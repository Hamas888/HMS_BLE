{
  "name": "HMS_BLE",
  "version": "1.0.0",
  "description": "Cross-platform Bluetooth Low Energy (BLE) library for Linux, Windows, macOS, and Arduino (ESP32/STM32/nRF52).",
  "keywords": [
    "bluetooth",
    "ble",
    "low-energy",
    "embedded",
    "esp32",
    "stm32",
    "nrf52",
    "arduino",
    "platformio"
  ],
  "authors": [
    {
      "name": "Hamas Saeed",
      "email": "hamasaeed888@gmail.com",
      "url": "https://github.com/Hamas888",
      "maintainer": true
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hamas888/HMS_BLE.git"
  },
  "frameworks": ["arduino", "espidf"],
  "platforms": ["espressif32", "ststm32", "nordicnrf52"],
  "dependencies": [
    {
      "name": "NimBLE-Arduino"
    }
  ],
  "build": {
    "flags": [
      "-std=gnu++17"
    ],
    "unflags": [
      "-std=gnu++11"
    ]
  },
  "license": "MIT",
  "homepage": "https://github.com/Hamas888/HMS_BLE",
  "examples": [
    "examples"
  ],
  "export": {
    "include": [
      "src",
      "include",
      "examples",
      "CMakeLists.txt",
      "library.json",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "test",
      ".pio",
      ".vscode"
    ]
  }
}